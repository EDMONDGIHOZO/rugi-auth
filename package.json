{
  "name": "rugi-auth",
  "version": "2.0.1",
  "description": "Centralized authentication service with multi-app role management",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
"exports": {
    ".": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
    },
    "./client": {
        "types": "./dist/client.d.ts",
        "default": "./dist/client.js"
    }
},
  "files": [
    "dist",
    "prisma"
  ],
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/server.js",
    "start:pm2": "pm2 start ecosystem.config.js",
    "stop:pm2": "pm2 stop rugi-auth",
    "restart:pm2": "pm2 restart rugi-auth",
    "reload:pm2": "pm2 reload rugi-auth",
    "delete:pm2": "pm2 delete rugi-auth",
    "logs:pm2": "pm2 logs rugi-auth",
    "monitor:pm2": "pm2 monit",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:seed": "tsx prisma/seed.ts",
    "generate:keys": "tsx scripts/generate-keys.ts",
    "dev:reset-app": "tsx scripts/reset-default-app.ts",
    "dev:create-superadmin": "tsx scripts/create-superadmin.ts",
    "migrate:roles": "tsx scripts/migrate-roles-to-app-specific.ts",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "authentication",
    "jwt",
    "oauth",
    "multi-tenant",
    "express",
    "middleware"
  ],
  "author": "EDMONDGIHOZO",
  "license": "MIT",
"repository": {
    "type": "git",
    "url": "git+https://github.com/EDMONDGIHOZO/rugi-auth.git"
},
"homepage": "https://github.com/EDMONDGIHOZO/rugi-auth#readme",
"bugs": {
    "url": "https://github.com/EDMONDGIHOZO/rugi-auth/issues"
},
  "dependencies": {
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.0.1"
},
"peerDependencies": {
    "express": "^4.18.0 || ^5.0.0"
},
"peerDependenciesMeta": {
    "express": {
        "optional": false
    }
},
"optionalDependencies": {
    "@prisma/client": "5.7.1",
    "argon2": "^0.31.2",
    "axios": "^1.13.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.1",
    "joi": "^17.11.0",
    "nodemailer": "^7.0.11",
    "pem-jwk": "^1.5.1",
    "pino": "^8.17.2",
    "pino-http": "^8.6.0",
    "pino-pretty": "^10.3.1",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.6",
    "@types/nodemailer": "^7.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "prisma": "5.7.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
